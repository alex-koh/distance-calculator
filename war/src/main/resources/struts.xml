<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
    
    <constant name="struts.devMode" value="true"/>
    <constant name="fromLabel" value="from"/>
    <constant name="toLabel" value="to"/>

    <constant name="com.magenta.calculator.contextPath"
              value="com.magenta.calculator.cities"></constant>
    <constant name="com.magenta.calculator.properties"
              value="default.properties"></constant>
    
    <bean class="com.magenta.calculator.calc.SQLCalculatorFactory"
          type="com.magenta.calculator.calc.CalculatorFactory"
          scope="singleton"></bean>
    <bean class="com.magenta.calculator.data.JNDISQLDAOFactory"
          type="com.magenta.calculator.data.DAOFactory"
          scope="singleton"></bean>

    <package name="default" namespace="/" extends="struts-default">
        <!--
            Формирует результаты в JSON-формате и отправляет их клиенту.
        -->
        <result-types>
            <result-type name="jsonResult" class="com.magenta.calculator.JSONResult"/>
        </result-types>

        <!--
            Загружает в базу данных новую информацию
        -->
        <action name="Admin" class="com.magenta.calculator.AdminAction">
            <result>/jsp/calculator.jsp</result>
        </action>

        <!-- 
            Возвращает главную страницу приложения 
        -->
        <action name="Main">
            <result>/jsp/calculator.jsp</result>
        </action>

        <!--
            CityList
            City
            Result
            CalcList
        -->
        <action name="*_JSON" class="com.magenta.calculator.{1}Action">
            <result name="success" type="jsonResult"/>
        </action>
    </package>
</struts>